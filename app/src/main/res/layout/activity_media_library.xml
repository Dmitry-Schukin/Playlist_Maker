<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/general_view_linear_layout_style">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/media_material_toolbar"
        style="@style/media_material_toolbar_style"
        app:titleTextAppearance="@style/screens_title"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        style="@style/tab_layout_media_style"
        app:tabTextAppearance="@style/tab_page_text_appearance"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>