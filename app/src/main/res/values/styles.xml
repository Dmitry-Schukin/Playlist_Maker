    <style name="new_playlist_button" parent="settings_supporting_button">
        <item name="android:text">@string/new_playlist</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>
    <style name="tab_page_text_appearance">
        <item name="android:textColor">@color/dark_color</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!-- Атрибуты BottomNavigationView-->
    <style name="bottom_navigation_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearanceActive">@style/text_bottom_navigation</item>
        <item name="itemTextAppearanceInactive">@style/text_bottom_navigation</item>
