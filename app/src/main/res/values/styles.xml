<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стили для LinearLayout -->
    <style name="linear_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:theme">@style/Base.Theme.Playlist_Maker</item>
    </style>
    <style name="main_screen_linear_layout_style" parent="linear_layout_style">
        <item name="android:background">@color/bright_blue</item>
    </style>
    <style name="general_view_linear_layout_style" parent="linear_layout_style">
        <item name="android:background">@color/white</item>
    </style>
    <style name="track_list_model_linear_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/model_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="constraint_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/Base.Theme.Playlist_Maker</item>
    </style>
    <style name="scroll_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/Base.Theme.Playlist_Maker</item>
    </style>
    <!-- Атрибуты заголовка MaterialToolbar-->
    <style name="screens_title">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <!-- Атрибуты MaterialToolbar-->
    <style name="material_toolbar_general_size_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/top_layout_height</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>
    <style name="settings_material_toolbar_style" parent="material_toolbar_general_size_style">
        <item name="title">@string/settings</item>
        <item name="titleTextColor">@color/dark_color</item>
    </style>
    <style name="main_screen_material_toolbar_style" parent="material_toolbar_general_size_style">
        <item name="title">@string/main_screen_title</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="search_material_toolbar_style" parent="material_toolbar_general_size_style">
        <item name="title">@string/search</item>
        <item name="titleTextColor">@color/dark_color</item>
    </style>
    <style name="audio_player_toolbar_style" parent="material_toolbar_general_size_style">
        <item name="navigationIcon">@drawable/arrow_back</item>
        <item name="titleTextColor">@color/dark_color</item>
        <item name="navigationIconTint">@color/dark_color</item>
    </style>
    <style name="media_material_toolbar_style" parent="material_toolbar_general_size_style">
        <item name="title">@string/media_library</item>
        <item name="titleTextColor">@color/dark_color</item>
    </style>


    <!-- Атрибуты кнопкок Главного экрана -->
    <style name="main_screen_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_and_width_weight_using</item>
        <item name="android:layout_marginLeft">@dimen/left_right_margin</item>
        <item name="android:layout_marginRight">@dimen/left_right_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_color</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconSize">24dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="search_button_style" parent="main_screen_button_style">
        <item name="icon">@drawable/search</item>
        <item name="android:text">@string/search</item>
        <item name="android:layout_marginTop">@dimen/top_bottom_margin</item>
    </style>
    <style name="media_button_style" parent="main_screen_button_style">
        <item name="icon">@drawable/media_library</item>
        <item name="android:text">@string/media_library</item>
    </style>
    <style name="settings_button_style" parent="main_screen_button_style">
        <item name="icon">@drawable/settings</item>
        <item name="android:text">@string/settings</item>
        <item name="android:layout_marginBottom">@dimen/top_bottom_margin</item>
    </style>

    <!-- Меню Настроек -->
    <style name="settings_screen_menu_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">@dimen/left_right_margin</item>
        <item name="android:paddingVertical">@dimen/settings_top_bottom_padding</item>
    </style>
    <style name="dark_theme_switch_style" parent="settings_screen_menu_style">
        <item name="android:layout_marginTop">@dimen/top_bottom_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/dark_theme</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
        <item name="switchMinWidth">32dp</item>
    </style>
    <style name="share_text_view_style" parent="settings_screen_menu_style">
        <item name="android:drawableEnd">@drawable/share</item>
        <item name="android:text">@string/share_app</item>
        <item name="drawableTint">@color/gray_color</item>
    </style>
    <style name="support_text_view_style" parent="settings_screen_menu_style">
        <item name="android:drawableEnd">@drawable/support</item>
        <item name="android:text">@string/write_to_support</item>
        <item name="drawableTint">@color/gray_color</item>
    </style>
    <style name="agreement_text_view_style" parent="settings_screen_menu_style">
        <item name="android:drawableEnd">@drawable/arrow</item>
        <item name="android:text">@string/user_agreement</item>
        <item name="drawableTint">@color/gray_color</item>
    </style>

    <!-- Страница поиска -->
    <style name="search_material_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/left_right_margin</item>
        <item name="android:layout_marginRight">@dimen/left_right_margin</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="cardCornerRadius">@dimen/small_corner_radius</item>
        <item name="android:backgroundTint">@color/light_gray_background_color</item>
    </style>
    <style name="search_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingLeft">@dimen/icon_margin</item>
        <item name="android:drawableStart">@drawable/search_icon_small</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColorHint">@color/gray_color</item>
        <item name="android:drawableTint">@color/gray_color</item>
        <item name="android:background">@color/light_gray_background_color</item>
        <item name="android:textColor">@color/dark_color</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="singleLine">true</item>
    </style>
    <style name="clear_close_cancel_image_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:src">@drawable/clear_close_cancel</item>
        <item name="android:paddingLeft">@dimen/left_right_padding</item>
        <item name="android:paddingRight">@dimen/left_right_padding</item>
        <item name="tint">@color/gray_color</item>
    </style>
    <!-- Атрибуты текста списка треков-->
    <style name="track_list_song_name">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="track_list_vocalist_time">
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/gray_color</item>
    </style>
    <!-- Атрибуты отрисованных и подгружаемых элементов списка треков-->
    <style name="track_list_album_icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/placeholder</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="track_list_arrow_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/arrow</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">@color/gray_color</item>
        <item name="android:layout_marginRight">@dimen/margin_start_end</item>
    </style>
    <style name="separator_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/separator</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">@color/gray_color</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <!-- Атрибуты TextView для списка треков-->
    <style name="track_list_text_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- Атрибуты Placeholder на странице поиска песен-->
    <style name="placeholder_icon">
        <item name="android:layout_width">@dimen/icon_size_120</item>
        <item name="android:layout_height">@dimen/icon_size_120</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">78dp</item>
    </style>
    <style name="placeholder_icon_nothing_was_search" parent="placeholder_icon">
        <item name="android:src">@drawable/search_nothing_placeholder</item>
    </style>
    <style name="placeholder_icon_smth_went_wrong" parent="placeholder_icon">
        <item name="android:src">@drawable/smth_went_wrong_placeholder</item>
    </style>
    <style name="message_text_appearance">
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/dark_color</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="placeholder_message_text_appearance" parent="message_text_appearance">
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="placeholder_text_view">
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="settings_supporting_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/dark_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/elevation_0</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">54dp</item>
    </style>
    <style name="update_button" parent="settings_supporting_button">
        <item name="android:text">@string/update</item>
    </style>
    <style name="progress_bar_style">
        <item name="android:layout_width">@dimen/progress_bar_size</item>
        <item name="android:layout_height">@dimen/progress_bar_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">148dp</item>
        <item name="android:indeterminateTint">@color/bright_blue</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- Атрибуты истории треков на странице поиска песен-->
    <style name="clear_history_button" parent="settings_supporting_button">
        <item name="android:text">@string/clear_history</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
    <style name="history_text_appearance" parent="message_text_appearance">
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="history_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/you_searched</item>
    </style>
    <!-- Атрибуты трека на странице аудиоплейера-->
    <style name="text_view_song_vocalist_name_audio_player">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="track_list_song_name_audio_player" parent="track_list_song_name">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="track_list_vocalist_audio_player" parent="track_list_song_name">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="track_attributes_text">
    <item name="android:textSize">@dimen/text_size_13</item>
    <item name="fontFamily">@font/ys_display_regular</item>
    <item name="android:letterSpacing">0</item>
    <item name="android:textFontWeight">400</item>
    </style>
    <style name="track_attributes_text_titles" parent="track_attributes_text">
        <item name="android:textColor">@color/gray_color</item>
    </style>
    <style name="track_attributes_text_values" parent="track_attributes_text">
        <item name="android:textColor">@color/dark_color</item>
    </style>
    <style name="image_card_view_attributes">
        <item name="android:layout_width">@dimen/icon_size_312</item>
        <item name="android:layout_height">@dimen/icon_size_312</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="cardCornerRadius">@dimen/small_corner_radius</item>
        <item name="cardElevation">@dimen/elevation_0</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>
    <style name="text_view_attributes_audio_player">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_margin_9</item>
        <item name="android:paddingBottom">@dimen/padding_margin_9</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="duration_text" parent="text_view_attributes_audio_player">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:text">@string/duration</item>
    </style>
    <style name="album_text" parent="text_view_attributes_audio_player">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/album</item>
    </style>
    <style name="year_text" parent="text_view_attributes_audio_player">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/year</item>
    </style>
    <style name="genre_text" parent="text_view_attributes_audio_player">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/genre</item>
    </style>
    <style name="country_text" parent="text_view_attributes_audio_player">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/country</item>
        <item name="android:paddingBottom">39dp</item>
    </style>
    <style name="duration_value" parent="text_view_attributes_audio_player">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
    </style>
    <style name="album_value" parent="text_view_attributes_audio_player">
        <item name="android:layout_width">0dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
    </style>
    <style name="year_value" parent="text_view_attributes_audio_player">
        <item name="android:layout_width">0dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
    </style>
    <style name="genre_value" parent="text_view_attributes_audio_player">
        <item name="android:layout_width">0dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
    </style>
    <style name="country_value" parent="text_view_attributes_audio_player">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingBottom">39dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
    </style>
    <style name="button_onto_audio_payer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="add_to_playlist_button" parent="button_onto_audio_payer">
        <item name="android:src">@drawable/add_button</item>
        <item name="android:layout_marginTop">@dimen/margin_70</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="play_button" parent="button_onto_audio_payer">
        <item name="android:src">@drawable/play_button</item>
        <item name="android:layout_marginTop">46dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="pause_button" parent="button_onto_audio_payer">
        <item name="android:src">@drawable/pause_button</item>
        <item name="android:layout_marginTop">46dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="add_to_favorite_button" parent="button_onto_audio_payer">
        <item name="android:src">@drawable/like_button</item>
        <item name="android:layout_marginTop">@dimen/margin_70</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="add_to_favorite_button_active" parent="button_onto_audio_payer">
        <item name="android:src">@drawable/like_active_button</item>
        <item name="android:layout_marginTop">@dimen/margin_70</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- Атрибуты на странице "Медиатека"-->
    <style name="tab_layout_media_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/object_size_48</item>
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/dark_color</item>
        <item name="tabIndicatorColor">@color/dark_color</item>
        <item name="android:contentDescription">@string/media_library</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabRippleColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/margin_24</item>
        <item name="android:layout_marginRight">@dimen/margin_24</item>
